<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:background="@color/white">
    <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/empty"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="@color/greylight" android:textSize="30sp"/>
    <ListView android:layout_width="match_parent" android:layout_height="match_parent"
              android:id="@+id/processeslist"
              style="@android:style/Widget.DeviceDefault.Light.ListView">
    </ListView>
    </RelativeLayout>
</LinearLayout>