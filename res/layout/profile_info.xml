<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:background="@color/purplelight"
            android:paddingLeft="10dp" android:paddingTop="5dp" android:paddingRight="10dp">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/info_name" android:background="@color/purplelight"
                android:layout_gravity="center_horizontal"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/white"/>
        <TextView android:layout_width="match_parent" android:layout_height="2dp"
                  android:background="@color/purplelight"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:id="@+id/textView4"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_gravity="left"
                android:background="@color/purplelight">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/addrhead"
                    android:layout_gravity="left" android:background="@color/purplelight"
                    android:textStyle="bold" android:textColor="@color/white" android:textSize="15sp"
                    android:layout_weight="1"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/addrhead"
                    android:id="@+id/info_address"
                    android:layout_gravity="left" android:background="@color/purplelight"
                    android:textStyle="normal" android:textColor="@color/white" android:textSize="15sp"
                    android:paddingLeft="5dp"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="@string/userhead" android:layout_gravity="left" android:background="@color/purplelight"
                      android:textStyle="bold" android:textColor="@color/white" android:textSize="15sp"
                      android:layout_weight="1"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="@string/userhead" android:id="@+id/info_user" android:layout_gravity="left"
                      android:background="@color/purplelight" android:textStyle="normal" android:textColor="@color/white"
                      android:textSize="15sp" android:paddingLeft="5dp"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent"
                      android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="@string/path" android:layout_gravity="left" android:background="@color/purplelight"
                      android:textStyle="bold" android:textColor="@color/white" android:textSize="15sp"
                      android:layout_weight="1"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="@string/localpathhead" android:id="@+id/info_localpath" android:layout_gravity="left"
                      android:background="@color/purplelight" android:textStyle="normal" android:textColor="@color/white"
                      android:textSize="15sp" android:paddingLeft="5dp"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent"
                      android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="@string/destination" android:layout_gravity="left" android:background="@color/purplelight"
                      android:textStyle="bold" android:textColor="@color/white" android:textSize="15sp"
                      android:layout_weight="1"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="@string/remotepathhead" android:id="@+id/info_remotepath" android:layout_gravity="left"
                      android:background="@color/purplelight" android:textStyle="normal" android:textColor="@color/white"
                      android:textSize="15sp" android:paddingLeft="5dp"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent"
                      android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="@string/typehead" android:layout_gravity="left" android:background="@color/purplelight"
                      android:textStyle="bold" android:textColor="@color/white" android:textSize="15sp"
                      android:layout_weight="1"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="@string/typehead" android:id="@+id/info_type" android:layout_gravity="left"
                      android:background="@color/purplelight" android:textStyle="normal" android:textColor="@color/white"
                      android:textSize="15sp" android:paddingLeft="5dp"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="10dp"
            android:id="@+id/editText2" android:background="@color/purplelight"/>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="3dp"
            android:id="@+id/editText" android:background="@color/purple"/>
    <ListView android:layout_width="fill_parent" android:layout_height="fill_parent" android:background="@color/white"
              android:id="@+id/lvSimple" android:dividerHeight="1dp" android:divider="@color/greylight"
              android:paddingLeft="5dp"></ListView>
</LinearLayout>