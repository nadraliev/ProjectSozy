<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView2" android:background="@color/white">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:layout_weight="1">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/checkinterval"
                            android:id="@+id/textView3" android:textColor="@color/grey" android:textSize="11pt"
                            android:paddingLeft="10dp" android:paddingTop="5dp" android:layout_weight="1"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/inminutes"
                            android:id="@+id/textView5" android:textSize="7pt" android:paddingLeft="10dp"/>
                </LinearLayout>
                <TextView android:layout_width="1dp" android:layout_height="match_parent" android:id="@+id/textView7"
                          android:background="@color/greylight"/>
                <EditText
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/interval" android:layout_gravity="right" android:background="@color/greylight"
                        android:textColor="@color/grey" android:textSize="12pt" android:gravity="center_vertical|center_horizontal"
                        android:editable="true" android:enabled="true"/>
            </LinearLayout>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:id="@+id/textView6" android:background="@color/greylight"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>